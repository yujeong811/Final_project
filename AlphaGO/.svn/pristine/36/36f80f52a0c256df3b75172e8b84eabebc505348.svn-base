<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<!DOCTYPE html>
<meta charset="UTF-8">
<body>
	<!-- row 시작 -->
	<div class="row">
		<div class="col-lg-12">
			<!-- card 시작 -->
			<div class="card">
				<!-- cardheader 시작 -->
				<div class="card-header col-md-12" style="text-align: center;">
					<h4>강의실 목록</h4>
					<div class="col-md-12">
						<!-- Modal 설정 -->
						<button type="button" class="btn btn-soft-primary"
							data-bs-toggle="modal" data-bs-target="#staticBackdrop"
							style="float: right;">강의실 등록</button>
					</div>
				</div>
				<!-- cardheader 끝 -->

				<!-- card-body 시작 -->
				<div class="card-body">
					<div class="bd-example" style="padding-left:50px;padding-right:50px;">
						<table class="table table-hover" style="text-align: center;">
							<thead class="table-light">
								<tr class="table-primary">
									<th scope="col">호수</th>
									<th scope="col">사용 목적</th>
									<th scope="col">수용 인원</th>
									<th scope="col">사용 여부</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<th scope="row">201</th>
									<td>회의실</td>
									<td>10</td>
									<td><span class="badge badge-soft-primary">사용 가능</span></td>
								</tr>
								<tr>
									<th scope="row">202</th>
									<td>대회의실</td>
									<td>30</td>
									<td><span class="badge badge-soft-primary">사용 가능</span></td>
								</tr>
								<tr>
									<th scope="row">203</th>
									<td>강의실</td>
									<td>30</td>
									<td><span class="badge badge-soft-danger">사용 불가능</span></td>
								</tr>
								<tr>
									<th scope="row">204</th>
									<td>강의실</td>
									<td>20</td>
									<td><span class="badge badge-soft-primary">사용 가능</span></td>
								</tr>
								<tr>
									<th scope="row">301</th>
									<td>회의실</td>
									<td>10</td>
									<td><span class="badge badge-soft-danger">사용 불가능</span></td>
								</tr>
							</tbody>

						</table>
					</div>
				</div>
				<!-- card-body 끝 -->

				<!-- Modal -->
				<div class="modal fade" id="staticBackdrop"
					data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
					aria-labelledby="staticBackdropLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="staticBackdropLabel">강의실 등록</h5>
								<button type="button" class="btn-close" data-bs-dismiss="modal"
									aria-label="Close"></button>
							</div>
							<!-- Modal-body 시작! -->
							<div class="modal-body">
								<form>
									<div class="row mb-3">
										<label for="inputEmail3" class="col-sm-2 col-form-label">호수</label>
										<div class="col-sm-10">
											<input type="text" class="form-control" id="">
										</div>
									</div>
									<div class="row mb-3">
										<label for="inputPassword3" class="col-sm-2 col-form-label">사용목적</label>
										<div class="col-sm-10">
											<input type="text" class="form-control" id="">
										</div>
									</div>
									<div class="row mb-3">
										<label for="inputPassword3" class="col-sm-2 col-form-label">수용인원</label>
										<div class="col-sm-10">
											<input type="text" class="form-control" id="">
										</div>
									</div>
									<!-- 									<button type="submit" class="btn btn-primary">Sign in</button> -->
								</form>
							</div>
							<!-- Modal-body 끝! -->

							<div class="modal-footer">
								<button type="button" class="btn btn-secondary"
									data-bs-dismiss="modal">Close</button>
								<button type="button" class="btn btn-primary">Submit</button>
							</div>
						</div>
					</div>
				</div>

				<!-- start card body -->
				<div class="card-body">
					<!-- 아이콘 wrapper 시작 -->
					<div class="col-sm-12" style="padding-left:50px;padding-right:50px;">
						<div style="margin-left:100px;margin-right:100px; border: 1px solid skyblue;padding:10px;padding-left:100px;">
							<div class="d-flex align-items-center col-sm-3"
								style="float: left;">
								<div class="flex-shrink-0 me-3">
									<div class="avatar-sm">
										<div
											class="avatar-title bg-soft-primary text-primary rounded-circle font-size-18">
											<i class="uil uil-users-alt"></i>
										</div>
									</div>
								</div>
								<div class="flex-grow-1 overflow-hidden">
									<p class="mb-1 text-truncate text-muted">Capacity</p>
									<h5 class="font-size-16 mb-0">100</h5>
								</div>
							</div>

							<div class="d-flex align-items-center col-sm-3"
								style="float: left;">
								<div class="flex-shrink-0 me-3">
									<div class="avatar-sm">
										<div
											class="avatar-title bg-soft-primary text-primary rounded-circle font-size-18">
											<i class="bx bx-user-x"></i>
										</div>
									</div>
								</div>

								<div class="flex-grow-1 overflow-hidden">
									<p class="mb-1 text-truncate text-muted">Empty</p>
									<h5 class="font-size-16 mb-0">3</h5>
								</div>
							</div>

							<div class="d-flex align-items-center col-sm-3"
								style="float: left;">
								<div class="flex-shrink-0 me-3">
									<div class="avatar-sm">
										<div
											class="avatar-title bg-soft-primary text-primary rounded-circle font-size-18">
											<i class="bx bx-user-check"></i>
										</div>
									</div>
								</div>

								<div class="flex-grow-1 overflow-hidden">
									<p class="mb-1 text-truncate text-muted">In use</p>
									<h5 class="font-size-16 mb-0">2</h5>
								</div>
							</div>

							<div class="d-flex align-items-center col-sm-3">
								<div class="flex-shrink-0 me-3">
									<div class="avatar-sm">
										<div
											class="avatar-title bg-soft-primary text-primary rounded-circle font-size-18">
											<i class="uil-signal-alt-3"></i>
										</div>
									</div>
								</div>

								<div class="flex-grow-1 overflow-hidden">
									<p class="mb-1 text-truncate text-muted">Floor</p>
									<h5 class="font-size-16 mb-0">2</h5>
								</div>
							</div>
						</div>
					</div>
					<!-- 아이콘 wrapper 끝 -->

					<!-- 빈강의실 table 시작 -->
					<div class="bd-example" style="margin-top: 30px;padding-left:50px;padding-right:50px;">
						<div class="col-md-12" style="text-align:center;margin:10px;">
							<span class="badge badge-soft-primary" style="font-size:1.0em;">
								사용 가능한 강의실
							</span>
						</div>
						<table class="table" style="text-align: center;">
							<thead class="table-light">
								<tr class="table-primary">
									<th scope="col">호수</th>
									<th scope="col">사용 목적</th>
									<th scope="col">수용 인원</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<th scope="row">203</th>
									<td>강의실</td>
									<td>30</td>
								</tr>
								<tr>
									<th scope="row">301</th>
									<td>회의실</td>
									<td>10</td>
								</tr>
							</tbody>
						</table>
						<!-- 빈강의실 table 끝 -->
					</div>
					<!-- end card body -->
				</div>
				<!-- card 끝 -->
			</div>
		</div>
	</div>
	<!-- row 끝 -->
</body>
